<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="855000.0" maxWidth="450.0" minHeight="300.0" minWidth="350.0" prefHeight="300.0" prefWidth="400.0"
            style="-fx-background-color: #8ab8ff; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 4);"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.examify.controller.ExportScheduleController">

    <top>
        <Label style="-fx-font-size: 21px; -fx-font-weight: bold;" text="%label.exportSchedule" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox maxHeight="175.0" maxWidth="350.0" minHeight="175.0" minWidth="350.0" prefHeight="175.0" prefWidth="350.0"
              spacing="12" style="-fx-background-color: #a8c6f4; -fx-padding: 15; -fx-background-radius: 6;">
            <BorderPane.margin>
                <Insets bottom="15" left="0" right="0" top="15" />
            </BorderPane.margin>

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="%label.selectSchedule"/>
            <ComboBox fx:id="scheduleSelector" prefWidth="Infinity" />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="%label.fileType"/>
            <ComboBox fx:id="fileTypeSelector" prefWidth="Infinity" />

        </VBox>
    </center>

    <bottom>
        <Button fx:id="exportButton"
                text="%button.export"
                prefWidth="150.0"
                minWidth="150.0"
                style="-fx-font-weight: bold; -fx-font-size: 21px; -fx-background-color: #ff5d55;"
                styleClass="action-button"
                BorderPane.alignment="CENTER"/>
    </bottom>

</BorderPane>
